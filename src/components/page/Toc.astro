---
const { content } = Astro.props;
---

<div class="toc">
	<div class="toc-item toc-title">
		<strong>本頁目錄</strong>
	</div>
	<div class="toc-divider"></div>
	{
		content.map((item: { text: string; link: string }) => (
			<div class="toc-item">
				<a class="toc-item-text" href={item.link} aria-label={item.text}>
					{item.text}
				</a>
			</div>
		))
	}
</div>

<style>
	.toc {
		max-width: 8.5rem;
		letter-spacing: 0.08rem;
		color: #ccc;
		text-align: center;
		line-height: 2rem;
	}
	.toc-divider {
		height: 0.1rem;
		width: 100%;
		background: #ccc;
	}
	.toc-item {
		align-content: center;
		height: 2.5rem;
		border-radius: 0.375rem;
	}
	.toc-item-text {
		color: #ccc;
		text-decoration: none;
	}
</style>
