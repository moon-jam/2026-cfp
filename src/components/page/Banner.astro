---
const { btn_url, h3, h2 } = Astro.props;

import StarIcon from "@assets/desc_page/star.svg";

import BannerBgIcon from "@assets/desc_page/banner_bg_icon.webp";
import BannerTransitionIcon from "@assets/desc_page/banner_tran.svg";
import BannerTransitionIcon2 from "@assets/desc_page/banner_tran2.svg";
---

<div class="banner-section">
	<img src={BannerTransitionIcon.src} class="banner-transition" alt="banner transition" />
	<img src={BannerTransitionIcon2.src} class="banner-transition banner2" alt="banner transition" />
	<div class="banner">
		<div class="banner-container">
			<div class="banner-text">{h3}</div>
			<img src={BannerBgIcon.src} class="bg-icon" alt="banner background" />
			<h2 class="banner-title" set:html={h2} />
			<a class="banner-button" href={btn_url} target="_blank" rel="noopener" aria-label="立即投稿">
				<StarIcon />
				<span> 立即投稿 </span>
				<StarIcon />
			</a>
		</div>
	</div>
</div>

<style>
	.banner-section {
		position: relative;
		width: 100%;
	}
	.banner {
		position: relative;
		padding: 4rem 4rem 4rem 4rem;
		width: 100%;
		background: var(--white);
		font-weight: bold;
		z-index: 10;
	}

	.banner-container {
		max-width: 60rem;
		margin: auto;
	}

	.banner-transition {
		display: block;
		width: 100%;
		pointer-events: none;
	}

	.banner2 {
		position: absolute;
		top: 0;
		left: 0;
		z-index: 10;
	}

	.banner-text,
	.banner-title {
		font-size: 2rem;
		background: linear-gradient(90deg, #2aa6ff, #009dff, #f8981d, #e84b1c);
		background-clip: text;
		-webkit-text-fill-color: transparent;
		color: transparent;
		color: red;
		max-width: fit-content;
	}

	.banner-title {
		font-size: 2.5rem;
		margin-bottom: 2.5rem;
	}

	.banner-text {
		margin-bottom: 2rem;
	}

	.banner-button {
		display: flex;
		align-items: center;
		justify-content: center;
		border-radius: 1000px;
		color: var(--white);
		background: #1e2c7a;
		font-size: 1.8rem;
		padding: 1rem 3rem;
		text-decoration: none;
		width: fit-content;
		gap: 1rem;
		transition: background 0.3s ease;
	}

	.banner-button:hover {
		background: #345b92;
	}

	.banner-button:active {
		background: #274374;
	}

	.banner-button svg {
		width: 1.5rem;
		height: 1.5rem;
	}

	.bg-icon {
		position: absolute;
		max-width: 20rem;
		bottom: 0;
		right: 3rem;
		opacity: 0.1;
		pointer-events: none;
		z-index: 0;
	}

	@media (max-width: 768px) {
		.banner-button {
			font-size: 1.5rem;
		}
	}
</style>
