];

const paper_info_content = [
	{
		title: "題目",
		detail: "長度請自行斟酌，題目無須與年會主題相關。",
		optional: false,
		publish: true
	},
	{
		title: "摘要",
		detail: "建議約 <b>350</b> 字，使用於宣傳與網站公告。",
		optional: false,
		publish: true
	},
	{
		title: "主題標籤",
		detail: "請填寫 1~3 個與展出內容相關的<b>領域與知識標籤</b>，例如：ML、Data Science、資安、NLP 等；錄取後會與投稿者溝通微調後公開於官網。",
		optional: false,
