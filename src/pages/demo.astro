	{ date: new Date("2026-03-08T23:59:00"), event: "錄取海報檔案及短影音上傳截止", time_text: "2026/03/08（日） 23:59" },
	{ date: new Date("2026-03-27"), event: "彩排", time_text: "2026/03/27（五）" },
