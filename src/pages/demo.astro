---
import SubmissionPage from "@layouts/SubmissionPage.astro";
import Content from "@components/page/Content.astro";
import MdContent from "@assets/doc/demo/Content.md";

const page_info = {
	title: "Demo 展徵稿",
	description: "透過專案展示與現場互動，展出成果、交流回饋，讓靈感在即時對談中誕生與延伸。",
	seo_title: "Demo 展投稿 | SITCON 2026 徵稿",
	seo_description: "SITCON 2026 全新 Demo 展徵稿！現場演示你的專案作品，與會眾面對面交流，獲得即時回饋。歡迎學生專題、遊戲試玩、創新應用等各類作品投稿。"
};

