				<h1>{page_info.title}</h1>
				<Description>
					{page_info.subtitle}
				</Description>

				<Countdown end="2025-10-20T21:59:00" start="2025-10-12T00:00:00" form_url="https://sitcon.org/" />

				<Schedule schedule={schedule} calendarUrl="https://sitcon.org/" />

				<Content title="議程早鳥">
					<ContentFormat>
						<MdContent />
					</ContentFormat>
				</Content>

				<Content title="議程種類">
					<div class="blocks">
						<div class="block">
							<h3 class="block-title">{block_content[0].title}</h3>
							<span class="block-time-normal">
								<span class="block-time-spotlight">{block_content[0].time.spotlight}</span>
								{block_content[0].time.normal}
							</span>
							<p class="block-content">{block_content[0].detail}</p>
						</div>

						<div class="block">
							<h3 class="block-title">Espresso</h3>
